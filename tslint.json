{
   "extends": "tslint:recommended",
   "rules": {
      "max-line-length": {
         "options": [120]
      },
      "object-literal-shorthand": {
         "severity": "warning"
      },
      "one-line": [false],
      "only-arrow-functions": [true, "allow-named-functions"],
      "trailing-comma": [true, {"multiline": "ignore", "singleline": "never"}],
      "variable-name": ["allow-trailing-underscore"]
   }
}
